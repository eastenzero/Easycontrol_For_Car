<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
  android:color="@color/glass_surface_highlight">
  <item>
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <gradient
            android:type="radial"
            android:gradientRadius="80dp"
            android:startColor="#6600F0FF"
            android:centerColor="#2200F0FF"
            android:endColor="#00000000" />
          <corners android:radius="20dp" />
        </shape>
      </item>

      <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
          <solid android:color="#3300F0FF" />
          <corners android:radius="20dp" />
          <stroke
            android:width="1dp"
            android:color="@color/glass_border" />
        </shape>
      </item>
    </layer-list>
  </item>
</ripple>
