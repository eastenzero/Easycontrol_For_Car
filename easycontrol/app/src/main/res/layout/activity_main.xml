<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg_app_liquid"
  android:fitsSystemWindows="true"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="24dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <ImageView
      android:id="@+id/button_set"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/bg_glass_button"
      android:padding="12dp"
      android:src="@drawable/bars"
      android:tint="@color/glass_text_secondary" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/glass_accent"
        android:textSize="@dimen/largeFont" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_poem"
        android:textColor="@color/onBackgroundSecond"
        android:textSize="@dimen/smallSmallFont" />
    </LinearLayout>

    <ImageView
      android:id="@+id/button_refresh"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/bg_glass_button"
      android:padding="12dp"
      android:src="@drawable/refresh"
      android:tint="@color/glass_text_secondary" />

    <ImageView
      android:id="@+id/button_pair"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/bg_glass_button"
      android:padding="12dp"
      android:src="@drawable/pair"
      android:tint="@color/glass_text_secondary" />

    <ImageView
      android:id="@+id/button_add"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:background="@drawable/bg_glass_button"
      android:padding="12dp"
      android:src="@drawable/plus"
      android:tint="@color/glass_text_secondary" />

  </LinearLayout>

  <ExpandableListView
    android:id="@+id/devices_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:divider="@null"
    android:dividerHeight="16dp"
    android:padding="16dp"
    android:paddingBottom="80dp"
    tools:listitem="@layout/item_devices_item"
    android:groupIndicator="@null" />

</LinearLayout>
